{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello User</h1>

    <ul>
        <li>Your logout at <code><a href="{{ path('logout') }}">uitloggen</a></code></li>
    </ul>

    {% for kamers in kamer %}

    <div class="card">
        <img src="{{ kamer.image }}" alt="Avatar" style="width:100%">
        <div class="container">
            <h4><b>{{ kamer.name }}</b></h4>
            <a class="btn btn-lg btn-circle btn-outline-white" href="/reservation">Book!</a>
        </div>
    </div>

    {% endfor %}

</div>

{% endblock %}
